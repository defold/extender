platforms:
    common:
        context:
            flags:          ["-fno-exceptions"]
            excludeSymbols: ["SymbolA"]
    x86_64-osx:
        context:
            flags:          ["-fno-rtti"]
            excludeSymbols: ["SymbolB"]
    x86-win32:
        context:
            use-clang: true
            excludeSymbols: ["SymbolC"]
    x86_64-win32:
        context:
            use-clang: true
            excludeSymbols: ["SymbolC"]
